    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:padding="5dp" >
         <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="4dp" >
        
        <Button
        android:drawSelectorOnTop="true" 
            android:padding="10dp"
            android:background="#08A632"
            android:id="@+id/maybe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="May Be" />
</LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="4dp" >
        <Button
        android:drawSelectorOnTop="true" 
            android:padding="10dp"
            android:background="#08A632"
            android:id="@+id/accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/Venuetv"
            android:layout_alignParentBottom="true"
            android:text="Accept" />
</LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="4dp" >
        
        <Button
        android:drawSelectorOnTop="true" 
            android:padding="10dp"
            android:background="#08A632"
            android:id="@+id/decline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/Venuetv"
            android:text="Decline" />
        </LinearLayout>
</LinearLayout>





    </LinearLayout>
</com.test.weeklly.dummyui.VerticalScrollview>
</LinearLayout>
 
